{
	"include": [ "vite.config.js", "./client/**/*" ],
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "./client",
    "paths": {
      "@/*": ["./*"]
    },
		"checkJs": true,
		"declaration": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"module": "ES2022",
		"moduleResolution": "Node",
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020"
	}
}
